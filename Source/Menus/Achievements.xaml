<Window x:Class="SealFisher.wndAchievements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SealFisher"
        mc:Ignorable="d"
        Title="Achievements" Height="500" Width="300">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <StackPanel>
                <Border x:Name="bdrAchievement1"  BorderBrush="Black" BorderThickness="1" Margin="10">
                    <Canvas VerticalAlignment="Top" Height="50">
                        <CheckBox x:Name="cbAchievement1" Height="30" Width="200" Canvas.Left="5" Canvas.Top="15" IsEnabled="False"/>
                        <TextBlock x:Name="tblAchievement1" Text="First Fish" FontSize="15" Canvas.Left="29" Canvas.Top="6" FontWeight="DemiBold"/>
                        <TextBlock x:Name="tblAchExp1" Text="Catch your First Fish" FontSize="12" Canvas.Left="29" Canvas.Top="25"/>
                    </Canvas>
                </Border>
                <Border x:Name="bdrAchievement2"  BorderBrush="Black" BorderThickness="1" Margin="10">
                    <Canvas VerticalAlignment="Top" Height="50">
                        <CheckBox x:Name="cbAchievement2" Height="30" Width="200" Canvas.Left="5" Canvas.Top="15" IsEnabled="False"/>
                        <TextBlock x:Name="tblAchievement2" Text="First Money" FontSize="15" Canvas.Left="29" Canvas.Top="6" FontWeight="DemiBold"/>
                        <TextBlock x:Name="tblAchExp2" Text="Get your First Money" FontSize="12" Canvas.Left="29" Canvas.Top="25"/>
                    </Canvas>
                </Border>
                <Border x:Name="bdrAchievement3"  BorderBrush="Black" BorderThickness="1" Margin="10">
                    <Canvas VerticalAlignment="Top" Height="50">
                        <CheckBox x:Name="cbAchievement3" Height="30" Width="200" Canvas.Left="5" Canvas.Top="15" IsEnabled="False"/>
                        <TextBlock x:Name="tblAchievement3" Text="First Seal" FontSize="15" Canvas.Left="29" Canvas.Top="6" FontWeight="DemiBold"/>
                        <TextBlock x:Name="tblAchExp3" Text="Catch your First Seal" FontSize="12" Canvas.Left="29" Canvas.Top="25"/>
                    </Canvas>
                </Border>
                <Border x:Name="bdrAchievement4"  BorderBrush="Black" BorderThickness="1" Margin="10">
                    <Canvas VerticalAlignment="Top" Height="50">
                        <CheckBox x:Name="cbAchievement4" Height="30" Width="200" Canvas.Left="5" Canvas.Top="15" IsEnabled="False"/>
                        <TextBlock x:Name="tblAchievement4" Text="Starter Fisher" FontSize="15" Canvas.Left="29" Canvas.Top="6" FontWeight="DemiBold"/>
                        <TextBlock x:Name="tblAchExp4" Text="Catch 100 Fish" FontSize="12" Canvas.Left="29" Canvas.Top="25"/>
                    </Canvas>
                </Border>
                <Border x:Name="bdrAchievement5"  BorderBrush="Black" BorderThickness="1" Margin="10">
                    <Canvas VerticalAlignment="Top" Height="50">
                        <CheckBox x:Name="cbAchievement5" Height="30" Width="200" Canvas.Left="5" Canvas.Top="15" IsEnabled="False"/>
                        <TextBlock x:Name="tblAchievement5" Text="Apprentice Fisher" FontSize="15" Canvas.Left="29" Canvas.Top="6" FontWeight="DemiBold"/>
                        <TextBlock x:Name="tblAchExp5" Text="Catch 1.000 Fish" FontSize="12" Canvas.Left="29" Canvas.Top="25"/>
                    </Canvas>
                </Border>
                <Border x:Name="bdrAchievement6"  BorderBrush="Black" BorderThickness="1" Margin="10">
                    <Canvas VerticalAlignment="Top" Height="50">
                        <CheckBox x:Name="cbAchievement6" Height="30" Width="200" Canvas.Left="5" Canvas.Top="15" IsEnabled="False"/>
                        <TextBlock x:Name="tblAchievement6" Text="Experienced Fisher" FontSize="15" Canvas.Left="29" Canvas.Top="6" FontWeight="DemiBold"/>
                        <TextBlock x:Name="tblAchExp6" Text="Catch 10.000 Fish" FontSize="12" Canvas.Left="29" Canvas.Top="25"/>
                    </Canvas>
                </Border>
                <Border x:Name="bdrAchievement7"  BorderBrush="Black" BorderThickness="1" Margin="10">
                    <Canvas VerticalAlignment="Top" Height="50">
                        <CheckBox x:Name="cbAchievement7" Height="30" Width="200" Canvas.Left="5" Canvas.Top="15" IsEnabled="False"/>
                        <TextBlock x:Name="tblAchievement7" Text="Fish Master" FontSize="15" Canvas.Left="29" Canvas.Top="6" FontWeight="DemiBold"/>
                        <TextBlock x:Name="tblAchExp7" Text="Catch 100.000 Fish" FontSize="12" Canvas.Left="29" Canvas.Top="25"/>
                    </Canvas>
                </Border>
                <Border x:Name="bdrAchievement8"  BorderBrush="Black" BorderThickness="1" Margin="10">
                    <Canvas VerticalAlignment="Top" Height="50">
                        <CheckBox x:Name="cbAchievement8" Height="30" Width="200" Canvas.Left="5" Canvas.Top="15" IsEnabled="False"/>
                        <TextBlock x:Name="tblAchievement8" Text="Ship Builder" FontSize="15" Canvas.Left="29" Canvas.Top="6" FontWeight="DemiBold"/>
                        <TextBlock x:Name="tblAchExp8" Text="Build the first Ship" FontSize="12" Canvas.Left="29" Canvas.Top="25"/>
                    </Canvas>
                </Border>
                <Border x:Name="bdrAchievement9"  BorderBrush="Black" BorderThickness="1" Margin="10">
                    <Canvas VerticalAlignment="Top" Height="50">
                        <CheckBox x:Name="cbAchievement9" Height="30" Width="200" Canvas.Left="5" Canvas.Top="15" IsEnabled="False"/>
                        <TextBlock x:Name="tblAchievement9" Text="Seal Master" FontSize="15" Canvas.Left="29" Canvas.Top="6" FontWeight="DemiBold"/>
                        <TextBlock x:Name="tblAchExp9" Text="Catch 100 Seals" FontSize="12" Canvas.Left="29" Canvas.Top="25"/>
                    </Canvas>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
